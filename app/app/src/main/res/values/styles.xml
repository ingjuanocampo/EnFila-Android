    <style name="Text">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.Green">
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>


    <style name="Text.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Large.Bold.SecondaryColor">
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>

    <style name="Text.Large.Bold.PrimaryColor">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Text.PrimaryColor">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="hintTextColor">?colorOnPrimary</item>
    </style>


    <style name="Text.Medium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium.Bold.SecondaryColor">
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>




    <style name="Text.Green">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Small.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>


    <style name="Text.Small.Bold.SecondaryColor">
        <item name="android:textColor">?colorOnPrimaryContainer</item>
    </style>


    <style name="Text.Extra">
        <item name="android:textSize">@dimen/text_extra</item>
    </style>

    <style name="Text.Extra.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Extra.Bold.PrimaryDarkColor">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="Text.Extra.Bold.PrimaryColor">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="hintTextColor">?colorOnPrimary</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
    </style>

    <style name="Text.Extra.Bold.Color2">
        <item name="android:textColor">?colorAccent</item>
    </style>


    <style name="AppTheme.Dialog_Transparent_Adjust_Resize" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="ButtonWhiteStroke">
        <item name="android:background">@drawable/white_stroke_bubble</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <style name="ButtonStyle" >
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/second_color_selector</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">10dp</item>
    </style>


    <style name="ButtonStyle.Stroke">
        <item name="android:background">@drawable/oval_stroke_selector</item>
        <item name="android:textColor">?colorOnTertiary</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>