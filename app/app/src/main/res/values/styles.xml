<resources>

    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryLightColor</item>
        <item name="android:colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>


    <style name="Text.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Large.Bold.SecondaryColor">
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>

    <style name="Text.Large.Bold.PrimaryColor">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="Text.PrimaryColor">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>


    <style name="Text.Medium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium.Bold.SecondaryColor">
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>




    <style name="Text.Green">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Small.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>


    <style name="Text.Small.Bold.SecondaryColor">
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>


    <style name="Text.Extra">
        <item name="android:textSize">@dimen/text_extra</item>
    </style>

    <style name="Text.Extra.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Extra.Bold.PrimaryDarkColor">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="Text.Extra.Bold.PrimaryColor">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryColor</item>
    </style>

    <style name="Text.Extra.Bold.Color2">
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>


    <style name="Dialog_Transparent_Adjust_Resize" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="ButtonWhiteStroke">
        <item name="android:background">@drawable/white_stroke_bubble</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/second_color_selector</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">10dp</item>
    </style>


    <style name="ButtonStyle.Stroke" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/oval_stroke_selector</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>